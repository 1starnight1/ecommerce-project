# Flask应用配置
FLASK_ENV=development  # 开发环境: development, 生产环境: production
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=your-secret-key-here  # 替换为安全的随机字符串

# 数据库配置 - 使用SQLite（开发环境）
# DATABASE_URL=sqlite:///ecommerce.db

# 数据库配置 - 使用MySQL（生产环境，推荐）
DATABASE_URL=mysql+pymysql://ecommerce_user:MyPass123!@localhost/ecommerce_db

# 邮件服务器配置（可选）
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=noreply@yourdomain.com

# 数据库初始化（可选）
INIT_DATABASE=False  # 生产环境中设为False，仅在需要时设为True

# 调试模式（生产环境必须设为False）
DEBUG=True  # 生产环境设为False